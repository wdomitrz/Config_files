set number
set mouse=a
set autoindent

set tabstop=4
set expandtab
set shiftwidth=4

cab doc ~/Documents
iab inc #include<bits/stdc++.h>
iab foi for(int i=0; i<n; i++)
iab foj for(int j=0; j<m; j++)
set ignorecase
